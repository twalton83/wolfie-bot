{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "NodeNext",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
            "./types",
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
           "*": [
            "node_modules/*"
          ]
        },
    },
    "include": [
        "./src/**/*","./types"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}